{
    "manifest_version": 3,
    "name": "Message via WhatsApp",
    "version": "1.1",
    "description": "Right-click tel: or open WhatsApp message via popup",
    "permissions": ["contextMenus", "storage", "activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icon.png"],
            "matches": ["<all_urls>"]
        }
    ]
}